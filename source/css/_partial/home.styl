.cards-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  
  .cards {
    height: 100%;
    position: relative;
    overflow: hidden;
    background-color: #FFFFFF;
      
    div {
      position: absolute;
      text-align: center;
      top: 0;
      left: 0;
      line-height: 1;
      
      a {
        color: inherit;
      }
    }
    
    .bgc-pinker {
      background-color: #00d6ff;
    }

    .fc-pink {
      color: #FFFFFF;
    }

    .fc-black {
      color: #001D23;
    }

    .fc-pinker {
        color: #00D6FF
    }

    .bgc-pink {
        background-color: #FFFFFF
    }
  }

}

.start-container {
  a {
    color: #00d6ff;
  }
    
  padding: 1.5rem;
  font-size: 2rem;
  color: #00d6ff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  
  .contact {
    background: #FFFFFF;
    color: #001d23;
    padding: .75rem 3rem;
    border: .1rem solid #001d23;
    border-top: 0;
    border-left: 0;
  }
}